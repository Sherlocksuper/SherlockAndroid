<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NoteDetailFragment">


    <ImageView
        android:id="@+id/notedetail_backrows"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:src="@drawable/backrows" />
    <TextView
        android:id="@+id/notedetails_title"
        android:layout_toRightOf="@id/notedetail_backrows"
        android:layout_marginLeft="15dp"
        android:layout_marginTop="15dp"
        android:textSize="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="这是标题"
        android:textColor="@color/black"
        />

    <ImageView
        android:id="@+id/notedetail_penedit"
        android:layout_width="25dp"
        android:layout_height="25dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginRight="20dp"
        android:src="@drawable/pencilunselected"
         />

    <TextView
        android:layout_width="370dp"
        android:layout_height="2dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="50dp"
        android:background="#D8D8D8" />

    <TextView
        android:id="@+id/notedetail_content"
        android:layout_width="340dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:layout_centerHorizontal="true"
        android:text="正文正文正文正文正文正文正文正文正文正文正文正文正文
        正文正文正文正文正文正文正文正文正文正文正文"
        android:textSize="20dp"
        />

</RelativeLayout>