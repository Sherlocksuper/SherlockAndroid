<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyFragment">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:background="#C80000" />

    <TextView
        android:id="@+id/my_mainpart"
        android:layout_width="367dp"
        android:layout_height="200dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="22dp"
        android:layout_marginTop="62dp"
        android:background="@drawable/useful_shape" />


    <ImageView
        android:layout_width="386dp"
        android:layout_height="315dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="18dp"
        android:layout_marginTop="1dp"
        android:src="@drawable/img" />

    <TextView
        android:id="@+id/my_toManageKinds"
        android:layout_width="367dp"
        android:layout_height="50dp"
        android:layout_below="@+id/my_mainpart"
        android:layout_alignParentStart="true"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/useful_shape"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/my_toManageKinds"
        android:layout_alignTop="@+id/my_toManageKinds"
        android:layout_marginStart="13dp"
        android:layout_marginTop="11dp"
        android:text="分类管理"
        android:textSize="20dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/my_toManageKinds"
        android:layout_alignTop="@+id/my_toManageKinds"
        android:layout_marginStart="332dp"
        android:layout_marginTop="-5dp"
        android:text=">"
        android:textSize="40dp" />

    <ImageView
        android:id="@+id/my_settings"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="18dp"
        android:layout_marginEnd="18dp"
        android:src="@drawable/settings" />

</RelativeLayout>