<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <ImageView
        android:layout_width="332dp"
        android:layout_height="38dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="17dp"

        android:background="@drawable/search_shadow" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/top_search" />

    <ImageView
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_marginLeft="300dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/top_camera" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#E0E0E0"
        android:layout_marginTop="70dp"
        />
    <ImageView
        android:id="@+id/cinemanotloglogo"
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:layout_gravity="center"
        android:layout_marginLeft="120dp"
        android:layout_marginTop="200dp"
        android:src="@drawable/cinemanotloglogo" />

    <TextView
        android:id="@+id/textGotoLog"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/cinemanotloglogo"
        android:layout_alignStart="@+id/cinemanotloglogo"
        android:layout_alignBottom="@+id/cinemanotloglogo"
        android:layout_marginStart="-13dp"
        android:layout_marginTop="-24dp"
        android:layout_marginBottom="-29dp"
        android:gravity="center_horizontal"
        android:text="您还未登录"
        android:textColor="#00B502"
        android:textSize="40dp" />

    <Button
        android:id="@+id/notlot_CinemagotoLog"
        android:layout_width="148dp"
        android:layout_height="61dp"
        android:layout_alignTop="@+id/textGotoLog"
        android:layout_alignEnd="@+id/textGotoLog"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="24dp"
        android:background="@drawable/button_shape"
        android:text="去登陆"
        android:textColor="@color/white"
        android:textSize="30dp" />
</RelativeLayout>